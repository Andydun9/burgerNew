<h1>BurgerVille!</h1>

<h2>Burgers that have not been eaten</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{!-- {{> burgers/burgers-block devoured=true}} --}}
      <button class="uneaten" data-id={{this.id}}>{{this.burger_name}}</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> burgers/burgers-block devoured=false}} --}}
        <div>{{this.burger_name}}</div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

</form>

 <button id="addBurger">Add Burger</button>